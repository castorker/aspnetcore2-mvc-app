@model HomeViewModel

<h2>@Model.Title</h2>
<br />
@foreach (var artist in Model.Artists)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@artist.ImageUrl" alt="@artist.Name" class="img-thumbnail">
            <div class="caption">
                <h3 class="pull-right">@artist.BirthYear - @artist.DeathYear</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@artist.Id">@artist.Name</a>
                </h3>
                <h4 class="pull-right">
                    <a asp-controller="Home" asp-action="Artworks" asp-route-id="@artist.Id">Artworks</a>
                </h4>
                <h4>@artist.City</h4>
                <p>@artist.ShortDescription</p>
            </div>
        </div>
    </div>
}
