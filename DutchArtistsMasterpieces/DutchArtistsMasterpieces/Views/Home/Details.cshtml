@model Artist

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.BirthYear - @Model.DeathYear</h3>
        <h3>
            <a href="#">@Model.Name</a>
            (<a asp-controller="Home" asp-action="Artworks" asp-route-id="@Model.Id">Artworks</a>)
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
</div>
